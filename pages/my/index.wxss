.container {
	display: flex;
  	flex-direction: column;
  	align-items: stretch;
 	padding-top: 10rpx; 
}

.block {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 110rpx;
	margin-bottom: 10rpx; 
}

.left {
	width: 15%;
	height: 100%;
	margin:0 10rpx;
}

.default {
	width: 15%;
	height: 100%;
	margin:0 10rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	background-color: black;
}

.default image {
	width: 70%;
	height: 70%;
}

.right {
	flex: 1;
	height: 100%;
	border-bottom: 1px solid #eee;
}

.fav-name {
	font-size: 16px;
}

.fav-count {
	font-size: 12px;
	color: #999;
}

.userinfo, .uploader {
    margin-top: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.userImg {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx;
    color: #007AFF;
}

.uploader {
    height: auto;
    padding: 0 0 0 40rpx;
    flex-direction: column;
    align-items: flex-start;
    box-sizing: border-box;
}

.uploader-text {
    width: 100%;
    line-height: 52px;
    font-size: 34rpx;
    color: #007AFF;
}